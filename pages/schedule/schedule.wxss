/* pages/schedule/schedule.wxss */

.title {
  margin: 20rpx;
  padding: 20rpx;
  /* background-color: #bd8c49; *//* border-radius: 10rpx; *//* color: #fff; */
  display: inline-block;
  font-size: 24rpx;
}

.active {
  border-bottom: 1rpx solid #bd8c49;
}

.time {
  display: flex;
  padding: 0 0 0 30rpx;
  background: rgb(241, 241, 241);
  height: 70rpx;
  line-height: 70rpx;
  font-size: 20rpx;
  color: rgb(116, 127, 126);
}

.li {
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 200rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.li:last-child {
  border: 0;
}

.corps {
  text-align: center;
  width: 33.33%;
}

.info {
  width: 33.33%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.corps-name {
  font-size: 28rpx;
}

.time-label {
  font-size: 20rpx;
  color: rgb(106, 118, 117);
}

.vs {
  font-size: 28rpx;
  color: rgba(74, 74, 74);
}

.detail {
  /* background: rgb(56, 131, 250); */
  padding: 10rpx 50rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #bd8c49;
}
