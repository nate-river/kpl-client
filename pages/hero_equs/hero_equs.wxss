/* pages/detail/detail.wxss */
.container{
  min-height: 100vh;
  padding-bottom:88rpx;
  background:#161c28;
}
.header {
  position: fixed;
  bottom:0;
  left:0;
  z-index: 1000;
  width:100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  border-top:1rpx solid #dddddd;
}

.list {
  height: 100%;
  display: flex;
  align-items: center;
  /* padding:0 40rpx; */
  justify-content: center;
  font-size: 24rpx;
  color: rgb(79, 100, 115);
  box-sizing: border-box;
  border-bottom: 1px solid #f5f5f5;
}
.gap{
  height:30rpx;
  width:1rpx;
  background: #e4e4e4;
}
.gap:last-child{
  width:0;
  height: 0;
}

.list:last-child {
  border-right: none;
}

.active {
  font-size: 24rp;
  color: #bd8a49;
}

.corps-state {
  border-bottom:1rpx solid #212b3d;
  display: flex;
  align-items: center;
  height: 56rpx;
}
.corps-state .state{
  width: 100%;
  padding-left: 20rpx;
  height: 100%;
  line-height: 56rpx;
  font-size: 24rpx;
   color: #d9dfee; 
  /* background: #d05847; */
}

.corps-state.win .state {
  background: #477cd1;
  color: #fff;
}

.ban {
  padding: 20rpx;
  height: 80rpx;
  overflow: hidden;
}

.ban-item {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
  border-radius: 50%;
  background: #e8e8e8;
}

.pick {
  padding: 0 0 0 20rpx;
}

.pick-item {
  position: relative;
  display: flex;
  height: 160rpx;
  padding-top: 24rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #212b3d;
}

.pick-item:first-child {
  border-top: 0;
}

.pick-hero {
  margin-top:15rpx;
  width: 82rpx;
  height: 82rpx;
  border:1rpx solid #e8e8e8;
  border-radius:5rpx;
  /* background-color:#e8e8e8; */
  /* border-radius:50%; *//* background: #f5f5f5; */
}

.info {
  display: flex;
  flex-direction: column;
  padding: 0 12rpx;
}

.name {
  /* font-weight: 300; */
  min-height: 50rpx;
  line-height: 50rpx;
  color: #bd8c49;
  font-size: 24rpx;
  padding-left: 10rpx;
}

.equ {
  height: 60rpx;
  display: flex;
}

.equ-item {
  margin: 0 3rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: #f5f5f5;
  border-radius: 50%; 
}

.data {
  padding-right: 24rpx;
  text-align: right;
  font-size: 8pt;
  position: absolute;
  right: 0;
  top: 36rpx;
  color: rgb(146, 146, 146);
}

.kda {
  font-size: 24rpx;
  color: #8e8e8e;
}
